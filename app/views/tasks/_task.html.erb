<div id="<%= dom_id task %>" class="w-full p-6 border rounded-xl shadow-sm bg-white space-y-4">
  <!-- Task Name -->
  <div>
    <h2 class="text-2xl font-bold text-gray-800 flex items-center justify-between">
      <span><%= task.name %></span>
      <!-- Urgency Badge -->
      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= urgency_color(task.urgency) %>">
        <%= task.urgency.titleize %>
      </span>
    </h2>
    <% if task.description.present? %>
      <p class="text-gray-600 mt-1"><%= task.description %></p>
    <% else %>
      <p class="text-gray-400 italic mt-1">No description provided.</p>
    <% end %>
  </div>

  <!-- Metadata Grid -->
  <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 text-sm text-gray-700">
    <!-- Creator -->
    <div class="flex flex-col">
      <span class="font-medium text-gray-900">Created by</span>
      <span><%= task.created_by&.name || "Unknown" %></span>
    </div>

    <!-- Assigned To -->
    <div class="flex flex-col">
      <span class="font-medium text-gray-900">Assigned to</span>
      <span><%= task.assigned_to&.name || "Unassigned" %></span>
    </div>

    <!-- Status -->
    <div class="flex flex-col">
      <span class="font-medium text-gray-900">Status</span>
      <span class="inline-flex items-center px-2 py-0.5 rounded-md text-xs font-medium <%= status_color(task.status) %>">
        <%= task.status.titleize %>
      </span>
    </div>

    <!-- Assigned On -->
    <div class="flex flex-col">
      <span class="font-medium text-gray-900">Assigned on</span>
      <span><%= task.assigned_on&.strftime("%b %d, %Y %H:%M") || "Not yet assigned" %></span>
    </div>

    <!-- Completed On -->
    <div class="flex flex-col">
      <span class="font-medium text-gray-900">Completed on</span>
      <span><%= task.completed_on&.strftime("%b %d, %Y %H:%M") || "Not yet completed" %></span>
    </div>
  </div>
</div>
