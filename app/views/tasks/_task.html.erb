<div id="<%= dom_id task %>" class="w-full p-4 border rounded-lg shadow-sm bg-white space-y-3">
  <!-- Task Name -->
  <div>
    <h2 class="text-xl font-bold text-gray-800"><%= task.name %></h2>
    <p class="text-gray-600"><%= task.description.presence || "No description provided." %></p>
  </div>

  <!-- Metadata -->
  <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 text-sm text-gray-700">
    <!-- Creator -->
    <div>
      <strong class="block font-medium text-gray-900">Created by:</strong>
      <span><%= task.created_by&.name || "Unknown" %></span>
    </div>

    <!-- Assigned To -->
    <div>
      <strong class="block font-medium text-gray-900">Assigned to:</strong>
      <span><%= task.assigned_to&.name || "Unassigned" %></span>
    </div>

    <!-- Visibility -->
    <div>
      <strong class="block font-medium text-gray-900">Visible to group:</strong>
      <span><%= task.visible_up_to&.name || "None" %></span>
    </div>

    <!-- Urgency -->
    <div>
      <strong class="block font-medium text-gray-900">Urgency:</strong>
      <span class="<%= urgency_color(task.urgency) %>"><%= task.urgency.titleize %></span>
    </div>

    <!-- Status -->
    <div>
      <strong class="block font-medium text-gray-900">Status:</strong>
      <span class="<%= status_color(task.status) %>"><%= task.status.titleize %></span>
    </div>

    <!-- Timestamps -->
    <div>
      <strong class="block font-medium text-gray-900">Assigned on:</strong>
      <span><%= task.assigned_on&.strftime("%b %d, %Y %H:%M") || "Not yet assigned" %></span>
    </div>
    <div>
      <strong class="block font-medium text-gray-900">Completed on:</strong>
      <span><%= task.completed_on&.strftime("%b %d, %Y %H:%M") || "Not yet completed" %></span>
    </div>
  </div>
</div>
