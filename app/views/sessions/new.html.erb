<% content_for :title, "Login" %>

<div class="max-w-md mx-auto bg-white shadow-md rounded p-6 mt-10">
  <h2 class="text-2xl font-semibold text-center text-blue-600 mb-4">Login</h2>

  <% if flash[:alert] %>
    <div class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mb-4">
      <%= flash[:alert] %>
    </div>
  <% end %>

  <%= form_with url: login_path, method: :post, local: true do |form| %>
    <div class="mb-4">
      <%= form.label :username %>
      <%= form.text_field :username, class: "block shadow-sm rounded-md border px-3 py-2 mt-2 w-full" %>
    </div>

    <div class="mb-4">
      <%= form.label :password %>
      <%= form.password_field :password, class: "block shadow-sm rounded-md border px-3 py-2 mt-2 w-full" %>
    </div>

    <%= form.submit "Login", class: "w-full rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white font-medium" %>
  <% end %>
</div>
