<div id="<%= dom_id user %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Username:</strong>
    <%= user.username %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Name:</strong>
    <%= user.name %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Group:</strong>
    <%= user.group&.name || "No Group" %>
  </div>
</div>
